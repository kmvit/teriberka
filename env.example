# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
# Для SQLite (по умолчанию)
# DATABASE_URL не требуется

# Для PostgreSQL (если нужно)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Frontend URL (для ссылок восстановления пароля)
FRONTEND_URL=http://localhost:3000

# Email Settings (если используется)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=noreply@teriberka.com

# Т-Банк Эквайринг (T-Bank Payment Gateway)
# Получите ключи в личном кабинете интернет-эквайринга Т-Банка
TBANK_TERMINAL_KEY=your_terminal_key_here
TBANK_PASSWORD=your_password_here
TBANK_API_URL=https://securepay.tinkoff.ru/v2

# Backend URL (для webhook)
# Локально с ngrok: https://your-ngrok-id.ngrok.io
# Продакшен: https://your-domain.com
BACKEND_URL=https://your-ngrok-id.ngrok.io

# Webhook URL для уведомлений от Т-Банка (формируется автоматически из BACKEND_URL)
# Можно переопределить вручную если нужно
# TBANK_NOTIFICATION_URL=https://your-ngrok-id.ngrok.io/api/v1/payments/webhook/

# URLs для перенаправления после оплаты (frontend)
PAYMENT_SUCCESS_URL=http://localhost:3000/payment/success
PAYMENT_FAIL_URL=http://localhost:3000/payment/fail
